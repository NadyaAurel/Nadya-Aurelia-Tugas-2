<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tbtampilanawal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gunungawal"
        android:layout_marginTop="145dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangleawal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/sidikjari_kanan" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vect19"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vect12"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sidikjari_kiri"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/perawalanhalo"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hadiahmenarik"
        android:layout_marginTop="700dp" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_marginTop="250dp">

            <androidx.cardview.widget.CardView
                android:layout_width="303dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparan">

                <ImageView
                    android:layout_width="303dp"
                    android:layout_height="180dp"
                    android:src="@drawable/tidaksemua" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="303dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparan">

                <ImageView
                    android:layout_width="303dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/viewscan" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="303dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparan">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/temanisegalaktivitas" />

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:layout_marginTop="430dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:cardBackgroundColor="@color/transparan"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="388dp"
                    android:layout_height="244dp"
                    android:layout_margin="5dp"
                    android:background="@color/transparan"
                    android:elevation="0dp"
                    android:src="@drawable/scantutupbotol_raisa" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vaganzafiesta"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/transparan"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="211dp"
                        android:layout_margin="5dp"
                        android:background="@color/transparan"
                        android:elevation="0dp"
                        android:src="@drawable/diskon70hotel" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/transparan"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="211dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/transparan"
                        android:elevation="0dp"
                        android:src="@drawable/cashback_spay" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/transparan"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="211dp"
                        android:layout_margin="5dp"
                        android:background="@color/transparan"
                        android:elevation="0dp"
                        android:src="@drawable/food_voucher"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/transparan"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"/>

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="211dp"
                    android:layout_marginLeft="30dp"
                    android:elevation="0dp"
                    android:src="@drawable/voucher_goffod"
                    android:id="@+id/goffod"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rect491"
                />







        </LinearLayout>
    </ScrollView>






</RelativeLayout>