<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scantutupbotol3">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/panahkirii"
        android:id="@+id/panahscanbtl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="85dp"
        android:onClick="panahscanbtl"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/teks_scantutupbotol"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fotoprofil"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/teks_totaltutupbotol"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/setiapkali_teks"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/scantutupbotol_img"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/warningtutupbotol"
        android:layout_marginTop="598dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:background="@drawable/rectangle481"
        app:backgroundTint="@color/blue"
        android:id="@+id/btnsave3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/submitteks"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="170dp"
        android:layout_centerHorizontal="true"/>


    <Button
        android:background="@drawable/rectangle481_shape"
        app:backgroundTint="@color/blue"
        android:id="@+id/kotakkatasandi"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancelteks"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="170dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>